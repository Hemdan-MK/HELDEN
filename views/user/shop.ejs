	.isotope-grid {
		display: flex;
		flex-wrap: wrap;
		/* Allows products to wrap to new lines */
		gap: 20px;
		/* Adjust spacing between products */
		justify-content: flex-start;
		/* Align products to the start */
		height: auto;
		/* Adjust height based on content */
	}

	.isotope-item {
		margin-bottom: 30px;
		/* Add spacing below each product */
		flex: 1 1 calc(25% - 20px);
		/* Ensure 4 products per row with spacing */
		max-width: calc(25% - 20px);
		/* Consistent width with spacing */
	}

	@media (max-width: 992px) {
		.isotope-item {
			flex: 1 1 calc(33.33% - 20px);
			/* 3 products per row */
			max-width: calc(33.33% - 20px);
		}
	}

	@media (max-width: 768px) {
		.isotope-item {
			flex: 1 1 calc(50% - 20px);
			/* 2 products per row */
			max-width: calc(50% - 20px);
		}
	}

	@media (max-width: 576px) {
		.isotope-item {
			flex: 1 1 100%;
			/* 1 product per row on small screens */
			max-width: 100%;
		}
	}
