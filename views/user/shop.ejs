	<script>
		document.addEventListener("DOMContentLoaded", function() {
			const filterLinks = document.querySelectorAll('.filter-link');
			const categoryButtons = document.querySelectorAll('.filter-tope-group button');
			const excludeOutOfStockButton = document.getElementById('excludeOutOfStock');
			const includeOutOfStockButton = document.getElementById('includeOutOfStock');

			let excludeOutOfStock = true; // Default to exclude out-of-stock products
			let activeCategory = "*"; // Default to show all products

			// Function to fetch filtered products based on all active criteria
			function fetchFilteredProducts() {
				const activeSort = document.querySelector('.filter-col1 .filter-link-active');
				const sortBy = activeSort ? activeSort.innerText.trim() : null;

				const activePrice = document.querySelector('.filter-col2 .filter-link-active');
				const priceRange = activePrice ? activePrice.innerText.trim() : null;

				fetch('/shop/filter', {
						method: 'POST',
						headers: {
							'Content-Type': 'application/json'
						},
						body: JSON.stringify({
							sortBy: sortBy,
							priceRange: priceRange,
							excludeOutOfStock: excludeOutOfStock,
							category: activeCategory
						})
					})
					.then(response => response.json())
					.then(data => renderProducts(data.products))
					.catch(error => console.error("Error fetching filtered products:", error));
			}

			// Render products into the grid container
			function renderProducts(products) {
				const productContainer = document.querySelector('.isotope-grid');
				productContainer.innerHTML = '';

				if(products.length === 0) {
					productContainer.innerHTML = `
                <div class="col-12 d-flex">
                    <p>No products found based on the selected filter.</p>
                </div>
            `;
				} else {
					products.forEach(product => {
						productContainer.innerHTML += `
                    <div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item">
                        <a href="/shop/product-detail/${product._id}" class="block2-link">
                            <div class="block2">
                                <div class="block2-pic hov-img0">
                                    <img src="${product.images[0]}" alt="IMG-PRODUCT">
                                </div>
                                <div class="block2-txt flex-w flex-t p-t-14">
                                    <div class="block2-txt-child1 flex-col-l">
                                        <span class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                                            ${product.name}
                                        </span>
                                        <span class="stext-105 cl3">
                                            &#8377; ${product.offerPrice}
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                `;
					});
				}

				// Refresh Isotope layout
				const iso = new Isotope(productContainer, {
					itemSelector: '.isotope-item',
					layoutMode: 'fitRows'
				});
				iso.layout();
			}

			// Event listeners for category buttons
			categoryButtons.forEach(button => {
				button.addEventListener('click', function() {
					activeCategory = this.getAttribute('data-filter');
					categoryButtons.forEach(btn => btn.classList.remove('how-active1'));
					this.classList.add('how-active1');
					fetchFilteredProducts();
				});
			});

			// Event listeners for "Sort By" and "Price" filters
			filterLinks.forEach(link => {
				link.addEventListener('click', function(e) {
					e.preventDefault();
					this.closest('ul').querySelectorAll('.filter-link').forEach(l => l.classList.remove('filter-link-active'));
					this.classList.add('filter-link-active');
					fetchFilteredProducts();
				});
			});

			// Availability filter logic
			excludeOutOfStockButton.addEventListener('click', function(e) {
				e.preventDefault();
				toggleAvailabilityFilter(true);
			});

			includeOutOfStockButton.addEventListener('click', function(e) {
				e.preventDefault();
				toggleAvailabilityFilter(false);
			});

			function toggleAvailabilityFilter(isExclude) {
				excludeOutOfStock = isExclude;
				excludeOutOfStockButton.classList.toggle('filter-link-active', isExclude);
				includeOutOfStockButton.classList.toggle('filter-link-active', !isExclude);
				fetchFilteredProducts();
			}

			// Initial fetch of all products
			fetchFilteredProducts();
			const iso = new Isotope(productContainer, {
				itemSelector: '.isotope-item',
				layoutMode: 'fitRows'
			});
			iso.layout();
		});
	</script>

	<script>
		document.addEventListener("DOMContentLoaded", function() {
			const searchInput = document.querySelector("input[name='search-product']");
			const productContainer = document.querySelector(".isotope-grid");
			const excludeOutOfStockButton = document.getElementById('excludeOutOfStock');
			const includeOutOfStockButton = document.getElementById('includeOutOfStock');

			let excludeOutOfStock = true;

			// Function to fetch search results
			function fetchSearchResults(searchTerm) {
				fetch('/shop/search', {
						method: 'POST',
						headers: {
							'Content-Type': 'application/json'
						},
						body: JSON.stringify({
							search: searchTerm,
							excludeOutOfStock: excludeOutOfStock
						})
					})
					.then(response => response.json())
					.then(data => {
						productContainer.innerHTML = ''; // Clear current products

						// Check if results are found
						if(data.products.length === 0) {
							productContainer.innerHTML = `
                            <div class="col-12 d-flex">
                                <p>No products found matching your search.</p>
                            </div>
                        `;
						} else {
							// Render products dynamically
							data.products.forEach(product => {
								productContainer.innerHTML += `
                                <div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item">
                                    <a href="/shop/product-detail/${product._id}" class="block2-link">
                                        <div class="block2">
                                            <div class="block2-pic hov-img0">
                                                <img src="${product.images[0]}" alt="IMG-PRODUCT">
                                            </div>
                                            <div class="block2-txt flex-w flex-t p-t-14">
                                                <div class="block2-txt-child1 flex-col-l">
                                                    <span class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                                                        ${product.name}
                                                    </span>
                                                    <span class="stext-105 cl3">
                                                        &#8377; ${product.offerPrice}
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            `;
							});
						}
						// Reinitialize or refresh Isotope layout
						const iso = new Isotope(productContainer, {
							itemSelector: '.isotope-item',
							layoutMode: 'fitRows'
						});
						iso.layout(); // Force Isotope to recalculate layout
					})
					.catch(error => console.error("Error fetching search results:", error));
			}

			// Event listener for the search input
			searchInput.addEventListener("input", function() {
				const searchTerm = searchInput.value.trim();
				fetchSearchResults(searchTerm); // Call function to fetch search results
			});

			excludeOutOfStockButton.addEventListener('click', function(e) {
				e.preventDefault();
				excludeOutOfStock = true;
				excludeOutOfStockButton.classList.add('filter-link-active');
				includeOutOfStockButton.classList.remove('filter-link-active');
				fetchSearchResults(searchInput.value.trim());
			});

			includeOutOfStockButton.addEventListener('click', function(e) {
				e.preventDefault();
				excludeOutOfStock = false;
				includeOutOfStockButton.classList.add('filter-link-active');
				excludeOutOfStockButton.classList.remove('filter-link-active');
				fetchSearchResults(searchInput.value.trim());
			});
		});
	</script>





