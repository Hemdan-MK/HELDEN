	<script>
		document.addEventListener("DOMContentLoaded", function() {
			const productId = "<%= product._id %>"; // Dynamically pass product ID from EJS
			const addToCartButtons = document.querySelectorAll(".js-addcart-detail");

			// Fetch the current stock from the backend
			async function fetchStock() {
				try {
					const response = await fetch(`/shop/product/${productId}/stock`);
					const data = await response.json();
					console.log('-------------------------------->>');
					console.log(data);

					if(data.success) {
						return data.stock; // Return the stock value
					} else {
						console.error('Failed to fetch product stock');
						return 0; // Default to 0 if fetching fails
					}
				} catch (error) {
					console.error('Error fetching stock:', error);
					return 0; // Default to 0 in case of error
				}
			}

			// Decrement quantity
			const decrementButtons = document.querySelectorAll('.btn-num-product-down');
			decrementButtons.forEach(button => {
				button.addEventListener('click', async function() {
					const inputField = this.nextElementSibling;
					let numProduct = Number(inputField.value);
					const stock = await fetchStock(); // Get current stock from backend
					if(numProduct > 1) {
						inputField.value = numProduct - 1;
					} else {
						inputField.value = 1; // Minimum value
					}
				});
			});

			// Increment quantity
			const incrementButtons = document.querySelectorAll('.btn-num-product-up');
			incrementButtons.forEach(button => {
				button.addEventListener('click', async function() {
					const inputField = this.previousElementSibling;
					let numProduct = Number(inputField.value);
					const stock = await fetchStock(); // Get current stock from backend
					if(numProduct < 5 && numProduct < stock) {
						inputField.value = numProduct + 1;
					} else if(numProduct >= 5) {
						inputField.value = 5; // Limit to 5 items
						Swal.fire({
							title: "Purchase Limit Reached",
							text: "You can only add up to 5 items to the cart.",
							icon: "warning",
							confirmButtonText: "OK"
						});
					} else if(numProduct >= stock) {
						inputField.value = stock; // Limit to stock
					}
				});
			});

			// Manual input validation
			const quantityInputs = document.querySelectorAll('.num-product');
			quantityInputs.forEach(input => {
				input.addEventListener('input', async function() {
					let numProduct = Number(this.value);
					const stock = await fetchStock(); // Get current stock from backend
					if(numProduct < 1 || isNaN(numProduct)) {
						this.value = 1; // Set to minimum value
					} else if(numProduct > stock) {
						this.value = stock; // Limit to stock
						Swal.fire({
							title: "Stock Limit Exceeded",
							text: `Only ${stock} items are available in stock.`,
							icon: "warning",
							confirmButtonText: "OK"
						});
					} else if(numProduct > 5) {
						this.value = 5; // Limit to 5 items
						Swal.fire({
							title: "Purchase Limit Exceeded",
							text: "You can only add up to 5 items to the cart.",
							icon: "warning",
							confirmButtonText: "OK"
						});
					}
				});
			});

			// Add to Cart Button Click Event
			addToCartButtons.forEach(button => {
				button.addEventListener("click", async function() {
					const selectedSize = document.querySelector(".product-size").value;
					const selectedColor = document.querySelector(".product-color").value;
					const quantity = document.querySelector(".num-product").value;

					// Log data for debugging
					console.log('--------------------------------------------------------');
					console.log(productId, selectedSize, selectedColor, quantity);
					console.log('--------------------------------------------------------');

					// Validate if size and color are selected
					if(!selectedSize || !selectedColor) {
						Swal.fire({
							title: "Select Options",
							text: "Please select both size and color before adding to cart.",
							icon: "warning",
							confirmButtonText: "OK"
						});
						return;
					}

					// Validate if the quantity is greater than the stock
					const stock = await fetchStock();
					if(Number(quantity) > stock) {
						Swal.fire({
							title: "Stock Limit Exceeded",
							text: `Only ${stock} items are available in stock.`,
							icon: "warning",
							confirmButtonText: "OK"
						});
						return;
					}

					// Send the data to the backend (add to cart)
					try {
						const response = await fetch("/shop/product-detail/add-to-cart", {
							method: "POST",
							headers: {
								"Content-Type": "application/json"
							},
							body: JSON.stringify({
								productId,
								size: selectedSize,
								color: selectedColor,
								quantity
							})
						});

						const data = await response.json();

						if(data.success) {
							Swal.fire({
								title: "Added to Cart!",
								text: "The product has been successfully added to your cart.",
								icon: "success",
								confirmButtonText: "OK"
							});
						} else {
							Swal.fire({
								title: "Error!",
								text: "There was an error adding the product to your cart. Please try again.",
								icon: "error",
								confirmButtonText: "OK"
							});
						}
					} catch (error) {
						console.error("Error adding to cart:", error);
						Swal.fire({
							title: "Error!",
							text: "Something went wrong. Please try again later.",
							icon: "error",
							confirmButtonText: "OK"
						});
					}
				});
			});
		});
	</script>
