	<script>
		function initializeMagnifier(imageId, magnifierId) {
			const productImage = document.getElementById(imageId);
			const magnifierGlass = document.getElementById(magnifierId);
			const zoom = 3; // Adjust the zoom level

			// Set the background image and size for the magnifier glass
			magnifierGlass.style.backgroundImage = `url('${productImage.src}')`;
			magnifierGlass.style.backgroundSize =
				`${productImage.width * zoom}px ${productImage.height * zoom}px`;

			// Event listeners for hover and movement
			productImage.parentElement.addEventListener("mousemove", moveMagnifier);
			productImage.parentElement.addEventListener("mouseenter", () => {
				magnifierGlass.style.display = "block";
			});
			productImage.parentElement.addEventListener("mouseleave", () => {
				magnifierGlass.style.display = "none";
			});

			function moveMagnifier(e) {
				const rect = productImage.getBoundingClientRect();
				const x = e.pageX - rect.left - window.pageXOffset;
				const y = e.pageY - rect.top - window.pageYOffset;

				// Set boundaries for the lens
				let posX = x - (magnifierGlass.offsetWidth / 2);
				let posY = y - (magnifierGlass.offsetHeight / 2);

				if(posX > productImage.width - magnifierGlass.offsetWidth) posX = productImage.width - magnifierGlass.offsetWidth;
				if(posX < 0) posX = 0;
				if(posY > productImage.height - magnifierGlass.offsetHeight) posY = productImage.height - magnifierGlass.offsetHeight;
				if(posY < 0) posY = 0;

				// Move the lens and adjust the background position
				magnifierGlass.style.left = posX + "px";
				magnifierGlass.style.top = posY + "px";
				magnifierGlass.style.backgroundPosition =
					`-${x * zoom - magnifierGlass.offsetWidth / 2}px -${y * zoom - magnifierGlass.offsetHeight / 2}px`;
			}
		}

		// Initialize magnifier for all product images dynamically
		'<% product.images.forEach((pdt, index) => { %>'
		document.addEventListener('DOMContentLoaded', () => {
			initializeMagnifier('productImage-<%= index %>', 'magnifierGlass-<%= index %>');
		});
		'<% }) %>'
	</script>




