			const incrementButtons = document.querySelectorAll(".btn-num-product-up");
			const quantityInputs = document.querySelectorAll(".num-product");
			const productId = "<%= product._id %>";

			let selectedSize = null;

			// Fetch stock from backend
			async function fetchStock(size) {
				try {
					const response = await fetch(`/shop/product/stock`, {
						method: "POST",
						headers: {
							"Content-Type": "application/json",
						},
						body: JSON.stringify({
							productId,
							size
						}),
					});
					const data = await response.json();
					if(data.success) {
						return data.stock;
					} else {
						console.error("Failed to fetch product stock");
						return 0;
					}
				} catch (error) {
					console.error("Error fetching stock:", error);
					return 0;
				}
			}

			// Size button click event
			sizeButtons.forEach((button) => {
				button.addEventListener("click", async () => {
					selectedSize = button.getAttribute("data-size");
					const stockQuantity = parseInt(button.getAttribute("data-stock"));

					if(stockQuantity > 0) {
						addToCartButton.style.display = "block";
						outOfStockButton.style.display = "none";
						addToCartButton.setAttribute("data-size", selectedSize);

						if(stockQuantity <= 5) {
							lowStockMessage.style.display = "block";
							lowStockMessage.innerHTML = `<h5 class="text-danger">Only ${stockQuantity} left in size ${selectedSize}! Buy FAST!</h5>`;
						} else {
							lowStockMessage.style.display = "none";
						}
					} else {
						addToCartButton.style.display = "none";
						outOfStockButton.style.display = "block";
						lowStockMessage.style.display = "none";
					}
				});
			});

			// Update quantity
			function updateQuantity(inputField, change) {
				let numProduct = Number(inputField.value) + change;
				numProduct = Math.max(1, numProduct); // Minimum 1
				inputField.value = numProduct;
			}

			// Decrement quantity
			decrementButtons.forEach((button) => {
				button.addEventListener("click", function() {
					if(!selectedSize) {
						Swal.fire({
							title: "Choose Size",
							icon: "warning",
							confirmButtonText: "OK",
						});
						return;
					}
					updateQuantity(this.nextElementSibling, -1);
				});
			});

			// Increment quantity
			incrementButtons.forEach((button) => {
				button.addEventListener("click", async function() {
					if(!selectedSize) {
						Swal.fire({
							title: "Choose Size",
							icon: "warning",
							confirmButtonText: "OK",
						});
						return;
					}
					const inputField = this.previousElementSibling;
					const stock = await fetchStock(selectedSize);
					let numProduct = Number(inputField.value);

					if(numProduct < stock && numProduct < 5) {
						inputField.value = numProduct + 1;
					} else if(numProduct >= 5) {
						inputField.value = 5;
						Swal.fire({
							title: "Purchase Limit Reached",
							text: "You can only add up to 5 items to the cart.",
							icon: "warning",
							confirmButtonText: "OK",
						});
					} else if(numProduct >= stock) {
						inputField.value = stock;
					}
				});
			});

			// Manual quantity input validation
			quantityInputs.forEach((input) => {
				input.addEventListener("input", async function() {
					const stock = await fetchStock(selectedSize);
					let numProduct = Number(this.value);

					if(numProduct < 1 || isNaN(numProduct)) {
						this.value = 1;
					} else if(numProduct > stock) {
						this.value = stock;
						Swal.fire({
							title: "Stock Limit Exceeded",
							text: `Only ${stock} items are available in stock.`,
							icon: "warning",
							confirmButtonText: "OK",
						});
					} else if(numProduct > 5) {
						this.value = 5;
						Swal.fire({
							title: "Purchase Limit Exceeded",
							text: "You can only add up to 5 items to the cart.",
							icon: "warning",
							confirmButtonText: "OK",
						});
					}
				});
			});

			// Add to Cart
			addToCartButton.addEventListener("click", async function() {
				const quantity = document.querySelector(".num-product").value;

				if(!selectedSize) {
					Swal.fire({
						title: "Select Options",
						text: "Please select a size before adding to cart.",
						icon: "warning",
						confirmButtonText: "OK",
					});
					return;
				}

				const stock = await fetchStock(selectedSize);
				if(Number(quantity) > stock) {
					Swal.fire({
						title: "Stock Limit Exceeded",
						text: `Only ${stock} items are available in stock.`,
						icon: "warning",
						confirmButtonText: "OK",
					});
					return;
				}

				try {
					const response = await fetch("/shop/product-detail/add-to-cart", {
						method: "POST",
						headers: {
							"Content-Type": "application/json",
						},
						body: JSON.stringify({
							productId,
							size: selectedSize,
							quantity
						}),
					});

					const data = await response.json();

					if(data.notLoggedIn) {
						Swal.fire({
							title: "Please Log In",
							text: "Please log in to add items to your cart",
							icon: "info",
							showCancelButton: true,
							confirmButtonText: "Log In",
							cancelButtonText: "Cancel"
						}).then((result) => {
							if(result.isConfirmed) {
								window.location.href = "/login";
							}
						});
					} else if(data.success && data.problem) {
						Swal.fire({
							title: "Too Much!",
							text: data.message,
							icon: "warning",
							confirmButtonText: "OK",
						});
					} else if(data.success) {
						Swal.fire({
							title: "Added to Cart!",
							text: "The product has been successfully added to your cart.",
							icon: "success",
							confirmButtonText: "OK",
						});
					} else {
						Swal.fire({
							title: "Error!",
							text: "There was an error adding the product to your cart. Please try again.",
							icon: "error",
							confirmButtonText: "OK",
						});
					}
				} catch (error) {
					console.error("Error adding to cart:", error);
					Swal.fire({
						title: "Error!",
						text: "Something went wrong. Please try again later.",
						icon: "error",
						confirmButtonText: "OK",
					});
				}
			});
		});
	</script>

