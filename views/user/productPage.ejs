	<script>
		document.addEventListener('DOMContentLoaded', function() {
			const wishlistButtons = document.querySelectorAll('.js-addwish-detail');

			wishlistButtons.forEach(function(button) {
				button.addEventListener('click', function(e) {
					e.preventDefault();

					

					const productId = '<%= product._id  %>'
					// const nameProduct = productContainer.querySelector('.js-name-detail') ? productContainer.querySelector('.js-name-detail').textContent : 'Unknown Product';
					const nameProduct = '<%= product.name  %>'


					if(!productId) {
						console.error("Product ID not found.");
						return;
					}

					swal(nameProduct, "is being added to your wishlist...", "info");

					fetch('/add-to-wishlist', {
							method: 'POST',
							headers: {
								'Content-Type': 'application/json',
							},
							body: JSON.stringify({
								productId: productId,
							})
						})
						.then(response => response.json())
						.then(data => {
							if(data.success) {
								swal(nameProduct, "has been added to your wishlist!", "success");

								button.classList.add('js-addedwish-detail');
								button.removeEventListener('click', arguments.callee); // Disable further clicks
							} else {
								swal("Oops!", data.message, "error");
							}
						})
						.catch(error => {
							console.error("Error adding product to wishlist:", error);
							swal("Oops!", "An error occurred. Please try again later.", "error");
						});
				});
			});
		});
