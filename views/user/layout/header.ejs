<style>
	.memes {
		z-index: 10101;
	}

	.cart-badge {
		position: absolute;
		top: 50%;
		left: 50%;
		background-color: red;
		color: white;
		border-radius: 50%;
		padding: 5px 10px;
		font-size: 14px;
		font-weight: bold;
	}
</style>
<header class="header-v2">
	<!-- Header desktop -->
	<div class="container-menu-desktop trans-03">
		<div class="wrap-menu-desktop">
			<nav class="limiter-menu-desktop p-l-45">
				<!-- Logo desktop -->
				<a href="#" class="logo">
					<img src="/users/images/icons/logo-helden.png" alt="IMG-LOGO" />
				</a>

				<!-- Menu desktop -->
				<div class="menu-desktop">
					<ul class="main-menu">
						<li class="active-menu">
							<a href="/home">Home</a>
						</li>

						<li>
							<a href="/shop">Shop</a>
						</li>

						<li>
							<a href="/about">About</a>
						</li>

						<li>
							<a href="/contact">Contact</a>
						</li>
						<% if(!user){ %>
						<li style="color: red; font-weight: 900;">
							<a href="/login">Login</a>
						</li>
						<li style="color: red; font-weight: 900;">
							<a href="/register">Register</a>
						</li>
						<% } %>
					</ul>
				</div>

				<!-- Icon header -->
				<div class="wrap-icon-header flex-w flex-r-m h-full">
					<div class="flex-c-m h-full p-r-24">
						<div class="icon-header-item cl2 hov-cl1 trans-04 p-lr-11 js-show-modal-search">
							<i class="zmdi zmdi-search"></i>
						</div>
					</div>

					<div class="flex-c-m h-full p-l-18 p-r-25 bor5" onclick="wiishlist()" style="cursor: pointer;">
						<!-- <i class="zmdi zmdi-shopping-cart"></i> -->
						<img style="height: 40px;" src="/users/images/icons/wish.png ">
					</div>

					<div class="flex-c-m h-full p-l-18 p-r-25 bor5 pos-relative" style="cursor: pointer;" onclick="cart()">
						<!-- <i class="zmdi zmdi-shopping-cart"></i> -->
						<img style="height: 40px;" src="/users/images/icons/cart.png">
						<% if(cartCount) { %>
						<span id="cart-badge position-absolute" class="cart-badge"><%= cartCount  %></span> <!-- Badge element -->
						<% } %>
					</div>
				</div>

				<div class="flex-c-m h-full p-lr-19" style="cursor: pointer;">
					<div class="icon-header-item cl2 hov-cl1 trans-04 p-lr-11 js-show-sidebar">
						<img style="height: 40px;" src="/users/images/icons/account.png" alt="">
					</div>
				</div>
		</div>
		</nav>
	</div>
	</div>

	<!-- Header Mobile -->
	<div class="wrap-header-mobile">
		<!-- Logo moblie -->
		<div class="logo-mobile">
			<a href="/"><img src="/users/images/icons/logo-helden.png" alt="IMG-LOGO" /></a>
		</div>

		<!-- Icon header -->
		<div class="wrap-icon-header flex-w flex-r-m h-full m-r-15">
			<div class="flex-c-m h-full p-r-10">
				<div class="icon-header-item cl2 hov-cl1 trans-04 p-lr-11 js-show-modal-search">
					<i class="zmdi zmdi-search"></i>
				</div>
			</div>

			<div class="flex-c-m h-full p-lr-10 bor5">
				<div class="icon-header-item cl2 hov-cl1 trans-04 p-lr-11 icon-header-noti js-show-cart" data-notify="2">
					<img style="height: 40px;" src="/users/images/icons/cart.png">
				</div>
			</div>
		</div>

		<!-- Button show menu -->
		<div class="btn-show-menu-mobile hamburger hamburger--squeeze">
			<span class="hamburger-box">
				<span class="hamburger-inner"></span>
			</span>
		</div>
	</div>

	<!-- Menu Mobile -->
	<div class="menu-mobile">
		<ul class="main-menu-m">
			<li>
				<a href="/">Home</a>

				<span class="arrow-main-menu-m">
					<i class="fa fa-angle-right" aria-hidden="true"></i>
				</span>
			</li>

			<li>
				<a href="/shop">Shop</a>
			</li>

			<li>
				<a href="/about">About</a>
			</li>

			<li>
				<a href="/contact">Contact</a>
			</li>
		</ul>
	</div>

	<!-- Modal Search -->
	<div class="modal-search-header flex-c-m trans-04 js-hide-modal-search">
		<div class="container-search-header">
			<button class="flex-c-m btn-hide-modal-search trans-04 js-hide-modal-search">
				<img src="/users/images/icons/icon-close2.png" alt="CLOSE" />
			</button>

			<form class="wrap-search-header flex-w p-l-15">
				<button class="flex-c-m trans-04">
					<i class="zmdi zmdi-search"></i>
				</button>
				<input class="plh3" type="text" name="search" placeholder="Search..." />
			</form>
		</div>
	</div>
</header>


<!-- //////////////////////////////////////////////////////////////////////////// -->


<aside class="wrap-sidebar js-sidebar memes">
	<div class="s-full js-hide-sidebar"></div>

	<div class="sidebar flex-col-l p-t-22 p-b-25">
		<div class="flex-r w-full p-b-30 p-r-27">
			<div class="fs-35 lh-10 cl2 p-lr-5 pointer hov-cl1 trans-04 js-hide-sidebar">
				<i class="zmdi zmdi-close"></i>
			</div>
		</div>

		<div class="sidebar-content flex-w w-full p-lr-65 js-pscroll">
			<ul class="sidebar-link w-full">
				<li class="p-b-13">
					<a href="/home" class="stext-102 cl2 hov-cl1 trans-04">
						Home
					</a>
				</li>

				<li class="p-b-13">
					<a href="/myAccount" class="stext-102 cl2 hov-cl1 trans-04">
						My Account
					</a>
				</li>

				<li class="p-b-13">
					<% if(user){ %>
					<a href="/logout" class="stext-102 cl2 hov-cl1 trans-04">
						LogOut
					</a>
					<% } %>
				</li>
			</ul>
		</div>
	</div>
</aside>

<script>
	function cart() {
		window.location.href = '/cart'
	}

	function wiishlist() {
		window.location.href = '/wishlist'
	}
</script>